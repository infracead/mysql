ARG VERSION=57
ARG USER=cead
ARG PWD=ADC987#
ARG DB=wiki
PKG mysql${VERSION}-server
PKG vim
PKG htop
PKG bash
PKG bash-completion
PKG sudo
SYSRC mysql_enable=YES
SERVICE mysql-server restart
CMD chsh -s bash root
CMD mysql -uroot -p"$(cat ~/.mysql_secret | awk 'NR==2')" -e "ALTER USER 'root'@'localhost' IDENTIFIED BY '${PWD};"
CMD mysql -uroot -pADC987# -e "CREATE DATABASE ${DB};"
CMD mysql -uroot -pADC987# -e "CREATE USER '${UER}'@'%' IDENTIFIED BY '${PWD}';"
CMD mysql -uroot -pADC987# -e "GRANT ALL PRIVILEGES ON ${DB}.* TO '${USER}'@'%';"
CMD mysql -uroot -pADC987# -e "FLUSH PRIVILEGES;"
